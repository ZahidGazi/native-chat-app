# MongoDB Connection String
# Get this from MongoDB Atlas or your MongoDB provider
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/native-chat-app?retryWrites=true&w=majority

# JWT Secret Key
# Generate a secure random string for production
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# Server Port (Render will set this automatically)
PORT=4000

# Node Environment
NODE_ENV=development

# Client URL for CORS (your mobile app or frontend URL)
# For development: http://localhost:8081 or your Expo dev URL
# For production: your deployed frontend URL or use * for all origins
CLIENT_URL=*
